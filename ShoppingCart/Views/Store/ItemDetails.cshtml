@model IEnumerable<EntityCore.ItemCategoryMasterVM>

@{
    ViewBag.Title = "Index";
}

<h2>Item List</h2>

 


<div id="itemLoader">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(m => item.Id);
                <td>
                    <img src="@Url.Content(item.ImagePath)" alt="Image" />
                </td>
                <td>
                    @Html.DisplayFor(m => item.ItemCode)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CategoryName)
                </td>
                <td>           
                    @Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCart", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </table>
</div>